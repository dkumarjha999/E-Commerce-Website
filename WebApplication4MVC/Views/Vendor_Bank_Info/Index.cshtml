@model IEnumerable<WebApplication4MVC.Models.Vendor_Bank_Info>
@{
    ViewBag.Title = "Index";
}

<hr/><h4>Vendor Bank Info</h4><br/>


<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>SNo</td>
            <td>VendorId</td>
            <td>BankName</td>
            <td>IFSCCode</td>
            <td>Branch</td>
            <td>AccountNo</td>
            <td>@Html.ActionLink("Add New Bank_Info", "Create", "Vendor_Bank_Info")</td>
        </tr>

    </thead>
    <tbody>
        @{ int RowNo = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@(RowNo += 1)</td>
                <td>@item.VendorName</td>
                <td>@item.BankName</td>
                <td>@item.IFSCCode</td>
                <td>@item.Branch</td>
                <td>@item.AccountNo</td>
               
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @onclick = "return confirm('Do you really want to delete ?')" })
                    @Html.ActionLink("View", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


@if (ViewBag.Msg != null)
{
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            alert("@ViewBag.Msg")
        });
    </script>
}