@model IEnumerable<WebApplication4MVC.Models.Vendor_Info>
@{
    ViewBag.Title = "Index";
}

<hr /><h4>Vendor Info</h4><br/>


<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>SNo</td>
            <td>VendorName</td>
            <td>Mobile</td>
            <td>Email</td>         
            <td>Country</td>
            <td>State</td>
            <td>City</td>
            <td>PinCode</td>
            <td>GSTIN</td>
            <td>PanCardNumber</td>
            <td>Address</td>
            <td>@Html.ActionLink("Add New Vendor", "Create", "Vendor_Info")</td>
        </tr>

    </thead>
    <tbody>
        @{ int RowNo = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@(RowNo += 1)</td>
                <td>@item.VendorName</td>
                <td>@item.Mobile</td>
                <td>@item.Email</td>
                <td>@item.CountryName</td>
                <td>@item.StateName</td>
                <td>@item.CityName</td>
                <td>@item.PinCode</td>
                <td>@item.GSTIN</td>
                <td>@item.PanCardNumber</td>
                <td>@item.Address</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.VendorId })
                    @Html.ActionLink("Delete", "Delete", new { id = item.VendorId }, new { @onclick = "return confirm('Do you really want to delete ?')" })
                    @Html.ActionLink("View", "Details", new { id = item.VendorId })
                </td>
            </tr>
        }
    </tbody>
</table>


@if (ViewBag.Msg != null)
{
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            alert("@ViewBag.Msg")
        });
    </script>
}